{{!< default}}

{{#post}}

    {{> header
        header-page=true
        title=title}}


    <main class="container hide-on-menu">
        <div class="row">
            <div class="col-lg-8 col-md-8">
              <div id="posts" class="posts posts-grid-narrow posts-grid-narrow-middle-gutter">
                <div class="render-search-results"></div>
              </div>
              <div class="page-content">
                <div class="render-search-results-indicator">
                <span class="spinner spinner-align-left">
                  <span class="double-bounce1"></span>
                  <span class="double-bounce2"></span>
                </span>
                </div>
                <div class="render-search-results-not-found hidden">
                  <p>Sorry, but nothing matched your search terms. Please try again with some different keywords.</p>
                  <form method="get" action="{{@blog.url}}/search/">
                    <div class="form-group">
                      <input id="sidebar-search-field" class="form-control" type="text" name="q" placeholder="">
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary">Search again</button>
                    </div>
                  </form>
                </div>
                <div class="pagination-wrap posts-grid-narrow-middle-gutter">
                  <nav class="pagination">
                    <span class="page-number">Page 1 of 1</span>
                  </nav>
                </div>
              </div>
            </div>
            {{> sidebar}}
        </div>
    </main>

{{/post}}
